# Apply this config conditionally to all C files
If:
    PathMatch: .*\.(c|h)$
CompileFlags:
    Compiler: g++
    Add: [
        -DUSE_CUDA,
        --no-cuda-version-check,
        -x,
        c++-header,
        -I/global/common/software/nersc/pe/gpu/gnu/openmpi/5.0.3/include,
        -I/sw/spack/deltas11-2023-03/apps/linux-rhel8-zen3/gcc-11.4.0/cuda-12.4.0-6bzpo2x/include,
        -I/usr/local/cuda/include,
        -I/usr/include/c++/11,
        -I/usr/include/x86_64-linux-gnu/c++/11,
    ]
    Remove:
        # strip CUDA fatbin args
        - "-Xfatbin*"
        # strip CUDA arch flags
        - "-gencode*"
        - "--generate-code*"
        # strip CUDA flags unknown to clang
        - "-ccbin*"
        - "--compiler-options*"
        - "--expt-extended-lambda"
        - "--expt-relaxed-constexpr"
        - "-forward-unknown-to-host-compiler"
        - "-Werror=cross-execution-space-call"
        - "--options-file"
        - "-Xcompiler=*"
        - "-frerun-loop-opt"
        - "-fabi-compat-version=2"
---

# Apply this config conditionally to all C++ files
If:
    PathMatch: .*\.(c|h)pp$
CompileFlags:
    Compiler: g++
    Add: [
        --no-cuda-version-check,
        -DUSE_CUDA,
        -I/global/common/software/nersc/pe/gpu/gnu/openmpi/5.0.3/include,
        -I/sw/spack/deltas11-2023-03/apps/linux-rhel8-zen3/gcc-11.4.0/cuda-12.4.0-6bzpo2x/include,
        -I/usr/local/cuda/include,
        -I/usr/include/c++/11,
        -I/usr/include/x86_64-linux-gnu/c++/11,
    ]
    Remove:
        # strip CUDA fatbin args
        - "-Xfatbin*"
        # strip CUDA arch flags
        - "-gencode*"
        - "--generate-code*"
        # strip CUDA flags unknown to clang
        - "-ccbin*"
        - "--compiler-options*"
        - "--expt-extended-lambda"
        - "--expt-relaxed-constexpr"
        - "-forward-unknown-to-host-compiler"
        - "-Werror=cross-execution-space-call"
        - "--options-file"
        - "-Xcompiler=*"
        - "-frerun-loop-opt"
        - "-fabi-compat-version=2"
        - "-Xcudafe"
        - "--diag-suppress=1650"
        - "--diag-suppress=128"
        - "-compress-all"
        - "--threads"
---

# Apply this config conditionally to all CUDA files
If:
    PathMatch: .*\.cuh?$
CompileFlags:
    Compiler: nvcc
    Add: [
        --cuda-gpu-arch=sm_80,
        -DUSE_CUDA,
        -I/global/common/software/nersc/pe/gpu/gnu/openmpi/5.0.3/include,
        -I/sw/spack/deltas11-2023-03/apps/linux-rhel8-zen3/gcc-11.4.0/cuda-12.4.0-6bzpo2x/include,
        -I/usr/local/cuda/include,
        -I/usr/include/c++/11,
        -I/usr/include/x86_64-linux-gnu/c++/11,
        -xcuda,
    ]
    Remove:
        # strip CUDA fatbin args
        - "-Xfatbin*"
        # strip CUDA arch flags
        - "-gencode*"
        - "--generate-code*"
        # strip CUDA flags unknown to clang
        - "-ccbin*"
        - "--compiler-options*"
        - "--expt-extended-lambda"
        - "--expt-relaxed-constexpr"
        - "-forward-unknown-to-host-compiler"
        - "-Werror=cross-execution-space-call"
        - "--options-file"
        - "-Xcompiler=*"
        - "-Xcudafe"
        - "--diag-suppress=1650"
        - "--diag-suppress=128"
        - "-compress-all"
        - "--threads"
